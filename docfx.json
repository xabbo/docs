{
  "metadata": [
    {
      "src": [
        {
          "src": "lib/",
          "files": [
            "common/src/Xabbo.Common/Xabbo.Common.csproj",
            "gearth/src/Xabbo.GEarth/Xabbo.GEarth.csproj",
            "messages/src/Xabbo.Messages/Xabbo.Messages.csproj",
            "core/src/Xabbo.Core/Xabbo.Core.csproj"
          ]
        }
      ],
      "dest": "api",
      "filter": "filter.yml"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "lib/**",
          "src/**",
          "Taskfile.yml"
        ]
      },
      { "files": "go.mods.json" }
    ],
    "resource": [
      {
        "files": [
          "images/**",
          "videos/**",
          "_headers"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/xabbo"
    ],
    "globalMetadata": {
      "_appName": "xabbo",
      "_appTitle": "xabbo",
      "_appLogoPath": "images/xabbo-skull-128.png",
      "_appFaviconPath": "images/xabbo-skull-64.png",
      "_appFooter": "Â© xabbo 2024 - xabbo is not affiliated with, endorsed, sponsored, or specifically approved by Sulake Oy or its Affiliates.",
      "_enableSearch": true,
      "_disableContribution": true,
      "pdf": false
    },
    "markdownEngineProperties": {
      "markdigExtensions": [
        "Abbreviations",
        "GridTables",
        "Footnotes"
      ],
      "alerts": {
        "Additional info": "alert alert-secondary"
      }
    },
    "postProcessors": [
      "Rewrite404"
    ]
  }
}