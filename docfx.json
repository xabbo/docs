{
  "metadata": [
    {
      "src": [
        {
          "src": "lib/",
          "files": [
            "common/src/Xabbo.Common/Xabbo.Common.csproj",
            "gearth/src/Xabbo.GEarth/Xabbo.GEarth.csproj",
            "messages/src/Xabbo.Messages/Xabbo.Messages.csproj",
            "core/src/Xabbo.Core/Xabbo.Core.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**",
          "lib/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern",
      "templates/xabbo"
    ],
    "globalMetadata": {
      "_appName": "xabbo",
      "_appTitle": "xabbo",
      "_appLogoPath": "images/xabbo-skull-128.png",
      "_enableSearch": true,
      "pdf": false
    },
    "markdownEngineProperties": {
      "markdigExtensions": [
        "Abbreviations",
        "Footnotes"
      ]
    }
  }
}